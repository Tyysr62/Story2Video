{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "http:default",
      "allow": [
        { "url": "https://*" },
        { "url": "http://localhost:*" },
        { "url": "http://127.0.0.1:*" }
      ]
    }
  ]
}
